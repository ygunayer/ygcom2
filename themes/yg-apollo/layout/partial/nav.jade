- var activeMenuItem = page.activeMenuItem
ul.nav.nav-list
  each entry, name in theme.menu
    li.nav-list-item
      - var re = /^(http|https):\/\/*/gi;
      - var tar = re.test(entry.url) ? "_blank" : "_self"
      - var isActiveItem = activeMenuItem && name == activeMenuItem;
      a.nav-list-link(class={active: (is_home() && entry.url === "/") || isActiveItem} href=entry.url target=tar)
        span
          if entry.icon
            i(class=entry.icon, alt=entry.title, title=entry.title)
          else
            != entry.title